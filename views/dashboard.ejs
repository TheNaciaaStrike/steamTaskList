    <script type="text/javascript">
    window.onload = startInterval;
    function startInterval() {
        total()
        setInterval("total()", 5000)
        setInterval("notDone()", 5000)
    }

    function total() {
        var x = ""
        fetch('../../api/taskCounter')
        .then((response) => {
            return response.json()
        })
        .then((myJson) => {
            document.getElementById('total').innerHTML = myJson
        });
    }
    function notDone() {
        var x = ""
        fetch('../../api/notDone')
        .then((response) => {
            return response.json()
        })
        .then((myJson) => {
            document.getElementById('notDone').innerHTML = myJson
        });
    }

    </script>
